<h2><%= ClientWallet.model_name.human %>: <%= @client_wallet.registered_number %></h2>

<div class="container mt-5">
  <div class='wallet-cotainer'>
    <div>
      <dl>
        <dt class="col-sm-3"><%= ClientWallet.human_attribute_name(:registered_number) %></dt>
        <dd class="col-sm-9"><%= @client_wallet.registered_number %></dd>

        <dt class="col-sm-3"><%= ClientWallet.human_attribute_name(:email) %></dt>
        <dd class="col-sm-9"><%= @client_wallet.email %></dd>

        <dt class="col-sm-3"><%= ClientWallet.human_attribute_name(:balance) %></dt>
        <dd class="col-sm-9"><%= format_rubi_value(@client_wallet.balance) %></dd>

        <dt class="col-sm-3"><%= ClientWallet.human_attribute_name(:bonus_balance) %></dt>
        <dd class="col-sm-9"><%= format_rubi_value(@client_wallet.bonus_balance) %></dd>
      </dl>
      <%= form_with(model: [:admin_backoffice, @client_wallet]) do |form| %>
        <div class="col-sm-9">
          <%= form.label :category, class: 'mb-3'%>
          <%= form.collection_select :category, @categories.order(:name), :id, :name, class:"form-select mb-3" %>
        </div>
        <%= form.submit 'Salvar', class:'btn btn-primary btn-submit btn-sm' %>
      <% end %>
    </div>
  </div>
</div>