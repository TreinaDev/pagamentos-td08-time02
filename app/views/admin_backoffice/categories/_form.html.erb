
  <%= form_with(model: [:admin_backoffice, @category], class:'d-flex justify-content-center flex-column') do |form| %>
    <div class="row">
      <div class="col-md-6">
        <%= form.label :name, class: "form-label"%>
        <%= form.text_field :name, class:"form-control mb-2" %>
      </div>

      <div class="col-md-6">
        <%= form.label :discount, class: "form-label" %>
        <%= form.number_field :discount, class:"form-control mb-2" %>
      </div>
    </div>

    <div class='d-flex justify-content-center flex-column'>
    <% if !@bonus.empty? %>
      <div class="col-md-6">
        <%= form.label :bonus_conversion_id, class: "form-label" %>
        <%= form.collection_select :bonus_conversion_id, @bonus, :id, :percentage, { include_blank: 'Sem conversão bônus' }, class:"form-select mb-3" %>
      </div>
    <% end %>
    <%= form.submit 'Registrar', class: 'btn btn-primary btn-submit btn-lg' %>
    </div>
  <% end %>
